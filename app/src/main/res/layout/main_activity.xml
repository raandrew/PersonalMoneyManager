<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TabWidget>

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="bottom|center"
            android:id="@+id/tab3"
            android:layout_marginBottom="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp">

                <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButton"
                    android:layout_alignParentRight="true"
                    android:checked="false" />

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp">
                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:textSize="30sp"
                            android:text="•"></TextView>
                        <TextView
                            android:layout_column="2"
                            android:layout_width="wrap_content"
                            android:textSize="30sp"
                            android:text="First line"></TextView>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:textSize="30sp"
                            android:text="•"></TextView>
                        <TextView
                            android:layout_column="2"
                            android:layout_width="wrap_content"
                            android:textSize="30sp"
                            android:text="Second line"></TextView>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:text="@string/link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:autoLink="web"
                    android:layout_centerInParent="true"
                    android:clickable="true" />

                <TextView
                    android:text="Personalized Tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:padding="10dp"
                    android:layout_alignBaseline="@+id/toggleButton"
                    android:layout_alignBottom="@+id/toggleButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="20dp"
                    android:paddingBottom="20dp" />

                <Button
                    android:text="Update Ledger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    android:onClick="updateLedger"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/tab2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ledgerLayout"
                android:layout_marginBottom="25dp">

                <Button
                    android:text="Clear Ledger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:onClick="clearLedger"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="false"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="30dp" />

                <Button
                    android:text="Update Ledger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    android:onClick="updateLedger"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_below="@+id/textView10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/button2"
                    android:layout_marginBottom="35dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*"
                        android:id="@+id/ledgerTable">

                    </TableLayout>
                </ScrollView>

                <TextView
                    android:text="Place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="26sp"
                    android:layout_alignTop="@+id/textView10"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:text="Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_alignBaseline="@+id/textView9"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="26sp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:text="Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="91dp"
                    android:id="@+id/textView10"
                    android:textSize="26sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView11"
                    android:layout_toRightOf="@+id/textView11"
                    android:layout_toEndOf="@+id/textView11"
                    android:layout_marginLeft="19dp"
                    android:layout_marginStart="19dp"
                    android:id="@+id/txtTotal"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:text="Total Amount:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/textView11"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_above="@+id/button2"
                    android:layout_alignLeft="@+id/textView9"
                    android:layout_alignStart="@+id/textView9" />

                <TextView
                    android:text="$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_alignBaseline="@+id/txtTotal"
                    android:layout_alignBottom="@+id/txtTotal"
                    android:layout_toRightOf="@+id/textView11"
                    android:layout_toEndOf="@+id/textView11"
                    android:layout_marginLeft="4dp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/tab1"
            android:gravity="bottom|center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="100dp">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:entries="@array/graphTime"
                    android:layout_gravity="top|center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:id="@+id/idPieChart"
                    android:layout_centerInParent="true">
                </com.github.mikephil.charting.charts.PieChart>

                <Button
                android:text="Update Ledger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:onClick="updateLedger"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</TabHost>